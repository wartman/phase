namespace Phase {

  class Boot {
    static attributes = []

    static registerAttribute(name, field, attributes) {
      static.attributes[name][field] = attributes
    }

    static getAttribute(name, field = null) {
      // todo: handle superclasses and stuff?
      if (!field) {
        return static.attributes[name]['__CLASS__']
      }
      return static.attributes[name][field]
    }
  }

}
